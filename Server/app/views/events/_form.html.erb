<%= form_for(@event, :url => event_path, :html => {:multipart => true}) do |f| %>
    <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
            <% @event.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :introduction %>
      <br/>
      <%= f.text_area :introduction %>
    </div>
    <div class="field">
      <%= f.label :latitude %>
      <br/>
      <%= f.text_field :latitude %>
    </div>
    <div class="field">
      <%= f.label :longitude %>
      <br/>
      <%= f.text_field :longitude %>
    </div>
    <div>
      <%= f.label :photo, "Photo" %>
      <%= f.file_field :photo %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

